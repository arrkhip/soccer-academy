mixin news()
	+b.SECTION.news
		+e.wrap
			+b.headline
				+e.title Наши новости
			+e.slider
				+e.slide
					+e.slide-inner
						+e.slide-img
							img(src="img/news__img-1.png")
						+e.slide-info
							+e.slide-title Дорогие друзья! 
							+e.slide-text
